<div class="main" data-sidebar-target="toggle" data-controller="sidebar">
  <%= render 'partials/topbar' %>
  <div class="container col-md-6 px-3 mt-5">
    <div class="login-main">
      <h2 class="audiowide">Log In</h2>
      <%= render "devise/shared/links" %>
    </div>

    <div class="login-body row align-items-center justify-content-center">
      <div class="col-md-6 col-12">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "form-control mb-3" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "form-control mb-3" } %>
            <%= f.button :submit, "Log in", class: "btn btn-primary w-100 mb-4" %>

            <div class="row mt-4">
              <div class="col-md-6 col-12">
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="col-md-6 col-12">
                <%- if devise_mapping.recoverable? %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-primary" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <div class="g-access d-flex align-items-center my-4">
          <div></div>
          <span>or access quickly</span>
          <div></div>
        </div>

        <div>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "google-signin w-100 d-flex align-items-center" do %>

                <div class="google-logo">
                  <%= image_tag("https://developers.google.com/static/identity/images/g-logo.png", alt: "Google Logo" ) %>
                </div>
                <span>Continue with <%= provider_name(provider) %></span>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
