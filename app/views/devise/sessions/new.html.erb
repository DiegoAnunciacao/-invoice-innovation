<div class="container col-md-6 mt-5">
  <div class="login-main">
    <h2 class="audiowide">Log in</h2>
    <%= render "devise/shared/links" %>
  </div>

  <div class="login-body">
    <div class="col-md-8">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.button :submit, "Log in", class: "btn btn-primary w-100" %>
          <div class="mt-4 d-flex justify-content-between">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="g-access d-flex gw-100 text-center">
        <div></div>
        <span>
          or access quickly
        </span>
        <div></div>
      </div>

      <div>
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "google-signin w-100" do %>
              <div class="google-logo">
                <%= image_tag("https://developers.google.com/static/identity/images/g-logo.png", alt: "Google Logo" ) %>
              </div>
              <span>
                Continue with <%= provider_name(provider) %>
              </span>
            <% end %>
          <% end %>
        <% end %>
      </div>

      </div>
  </div>
</div>
