<main class="d-flex flex-column text-center">
    <div class="mt-5">
      <h5 class="user-name"><%= @client.name.titleize %></h5>

      <h6 class="user-email"><%= @client.email %></h6>

    <div class="">
      <h5 class="mb-2">Email</h5>
      <p><%= client.email.squish %></p>
    </div>

    <div class="">
      <h5 class="mb-2">Address</h5>
      <p><%= client.address.squish %></p>
    </div>

    <div class="">
      <h5 class="mb-2">County</h5>
      <p><%= client.county.squish.titleize %></p>
    </div>

    <div class="">
      <h5 class="mb-2">Postocde</h5>
      <p><%= client.postcode.squish %></p>
    </div>

    <div class="">
      <h5 class="mb-2">Phone Number</h5>
      <p><%= client.phone.squish %></p>
    </div>
  </div>
  <div class="about">
    <%= link_to "",  edit_client_path(client), class: "fa-regular fa-pen-to-square badge-soft-primary", title: "Edit Client" %>
    <%= link_to "", deactivate_client_path(client), data: { turbo_method: :patch, turbo_confirm: "Are you sure you want to delete this client? This action cannot be undone."}, class: "fa-regular fa-circle-xmark badge-soft-danger" %>
  </div>
</main>
