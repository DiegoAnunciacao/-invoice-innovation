<div class="row mt-2 align-items-center justify-content-center">
  <div class="col-md-6 col-12">
    <%= form_with url: clients_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="details d-flex flex-column">
  <div class="recentInvoices">
    <div class="cardHeader">
      <h2>Client List</h2>
      <%= link_to "New Client", new_client_path, class: "btn btn-primary" %>
    </div>
    <table>
      <thead>
        <tr>
          <td>Name</td>
          <td>Email</td>
          <td>Phone Number</td>
          <td>Postcode</td>
        </tr>
      </thead>

        <tbody>
          <% @clients.each do |client| %>
            <tr onclick="location.href='<%= client_path(client) %>'" style="cursor: pointer;">
              <td>
                <%= client.name.titleize %>
              </td>
              <td><%= client.email %></td>
              <td><%= client.phone %></td>
              <td><%= client.postcode %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
